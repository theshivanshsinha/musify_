<body>
    <div id="bg">
        <div class="heading">
            <h1 id="t1">Create Account</h1>
            <div class="brand" id="brand">
                <i class="fa-solid fa-record-vinyl fa-flip" id="logo"></i>
                <h2 id="t2">Musify</h2>
            </div>
        </div>
        <div id="logdiv">
            <form action="/home" method="POST">
                <div class="container">
                  <label for="uname" class="ft"><b>Username</b></label>
                  <input type="text" placeholder="Enter Username" name="uname" required>
                  <br>
                  <label for="name" class="ft"><b>Name</b></label>
                  <input type="text" placeholder="Enter Full Name" name="name" required>
                  <br>
                  <label for="uname" class="ft"><b>Date of Birth</b></label>
                  <input type="date" placeholder="Enter Date of Birth" name="dob" required style="width: 100%;
                  padding: 12px 20px;
                  margin: 8px 0;
                  display: inline-block;
                  border: 1px solid #ccc;
                  box-sizing: border-box;">
                  <br>
                  <label for="psw" class="ft"><b>Password</b></label>
                  <input type="password" placeholder="Enter Password" name="psw" required>
                  <br>
                  <input type="submit" value="Sign Up" id="login">
                    <br>
                  <br>
                </div>
              </form>
        </div>
        <div class="bottombar">
            made with â™¡ by <b>Shivansh</b>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/fb965cfe0c.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.birds.min.js"></script>
    <script>
        VANTA.BIRDS({
            el: "#bg",
            mouseControls: true,
            touchControls: true,
            gyroControls: false,
            minHeight: 200.00,
            minWidth: 200.00,
            scale: 1.00,
            scaleMobile: 1.00
        })
    </script>
    <script src="index.js"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
</body>

</html>